{
  "name": "home-hub-api",
  "version": "1.0.5",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "node scripts/test.js --env=jsdom",
    "clean": "rimraf build",
    "build": "export NODE_ENV=production && npm run clean && babel src/server -d build/server",
    "lint": "eslint src/**",
    "start": "node build/server/server.js",
    "prodstart": "node build/server/server.prod.js",
    "version": "node -v",
    "coverage": "nyc report --reporter=text-lcov > lcov.info",
    "cleanOldContainers": "node scripts/cleanOldContainers.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hartalex/home-hub-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hartalex/home-hub-api/issues"
  },
  "homepage": "https://github.com/hartalex/home-hub-api#readme",
  "dependencies": {
    "body-parser": "^1.16.1",
    "cors": "^2.8.1",
    "ejs": "^2.5.7",
    "es6-promise": "^4.0.5",
    "express": "^4.15.5",
    "express-cache-headers": "^0.1.3",
    "express-force-ssl": "^0.3.2",
    "express-winston": "^2.4.0",
    "isomorphic-fetch": "^2.2.1",
    "mongodb": "^3.0.4",
    "request": "^2.83.0",
    "winston": "2.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "^24.1.0",
    "babel-loader": "7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-minify": "^0.3.0",
    "babel-register": "^6.26.0",
    "babel-runtime": "6.26.0",
    "cross-env": "^5.1.4",
    "dotenv": "4.0.0",
    "dotenv-expand": "4.2.0",
    "eslint": "^4.18.2",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.18.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^24.1.0",
    "nyc": "^13.3.0",
    "promise": "8.0.1",
    "raf": "3.4.0",
    "redux-devtools": "^3.4.1",
    "rimraf": "^2.6.2",
    "simple-mock": "^0.8.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/client/**/*.{js,jsx,mjs}",
      "src/server/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node",
      "mjs"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "eslint:recommended"
    ],
    "plugins": [
      "standard",
      "promise",
      "import",
      "jest"
    ],
    "globals": {
      "fetch": false,
      "describe": false,
      "it": false,
      "alert": false,
      "URL": false
    },
    "env": {
      "jest/globals": true
    }
  }
}
